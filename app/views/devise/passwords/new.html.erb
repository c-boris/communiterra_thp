<div class="flex min-h-screen flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <img class="mx-auto h-35 w-auto" src="<%= asset_path('logo_sm.png') %>" alt="communiterra logo" class="object-contain">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Mot de passe oublié ?</h2>
  </div>

  <div class="mt-2 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2 mb-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div class="forgot-password-container bg-green-primary rounded-md">
        <%= f.button "Envoyer les instructions de réinitialisation", type: "submit", class: "flex w-full justify-center rounded-md bg-green-secondary text-white px-3 py-2 text-sm font-semibold leading-5 shadow-sm hover:bg-green-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-primary" %>
      </div>

      <p class="mt-10 text-center text-sm text-gray-500">
        Sinon,
        <%= link_to "se connecter", new_user_session_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
        ou
        <%= link_to "s'inscrire", new_user_registration_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
      </p>

    <% end %>

  </div>
</div>
