<% if flash[:notice].present? %>
  <%= render 'shared/alert', alert_type: 'success', alert_message: flash[:notice] %>
<% elsif flash[:alert].present? %>
  <%= render 'shared/alert', alert_type: 'error', alert_message: flash[:alert] %>
<% end %>

<section class="px-4 py-4 mx-auto sm:max-w-xl md:max-w-full md:px-24 lg:max-w-screen-xl lg:px-8">
  <div class="p-4">
    <%= link_to 'Nouveau potager', new_allotment_path, class: 'p-4 text-indigo-500 font-semibold' %>
  </div>
  <div class="w-full">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Allotments</h1>
    </div>

    <div id="allotments" class="min-w-full">
      <%= render @allotments %>
    </div>
  </div>
</section>