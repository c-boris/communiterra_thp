<div id="<%= dom_id allotment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Size:</strong>
    <%= allotment.size %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= allotment.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= allotment.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= allotment.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= allotment.end_date %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this allotment", allotment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this allotment', edit_allotment_path(allotment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
<%= form_with(model: @allotment_user, url: allotment_users_path, method: :post) do |form| %>
  <%= form.fields_for :allotment_user do |au_form| %>
    <%= au_form.hidden_field :allotment_id, value: allotment.id %>
    <%= au_form.hidden_field :member_id, value: current_user.id %>
  <% end %>
  <%= form.submit 'Join this allotment', class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
<% end %>

    <hr class="mt-6">
  <% end %>
</div>
