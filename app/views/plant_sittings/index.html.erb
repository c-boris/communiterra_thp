<section class="px-4 py-4 mx-auto sm:max-w-xl md:max-w-full md:px-24 lg:max-w-screen-xl lg:px-8">
<div class="p-4">
  <%= link_to "Ajouter des plantes à garder", new_kept_plant_path, class: "p-4 text-indigo-500 font-semibold" %>
  <%= link_to "Mes demandes en cours", kept_plants_path, class: "p-4 text-indigo-500 font-semibold" %>
  <%= link_to "Mes gardes de plantes", index_current_user_plant_sittings_path, class: "p-4 text-indigo-500 font-semibold" %>
</div>
  <div class="container">
    <div class="grid xs:grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-4 p-4">
      <% if @kept_plants && @kept_plants.any? %>
        <% @kept_plants.each do |user_id, kept_plants| %>
          <div class="flex flex-wrap">
            <% user = User.find(user_id) %>
            <% kept_plants.group_by { |kept_plant| [kept_plant.start_date, kept_plant.end_date] }.each do |dates, plants| %>
              <div class="lg:w-1/6 md:w-1/6 sm:w-1/3 w-full lg:pr-6 lg:py-10 mb-6 lg:mb-0  bg-white rounded shadow-sm p-5">
                  <h1 class="text-gray-900 text-xl title-font font-medium mb-0"><%= user.username %></h1>
                <div class="flex mb-4">
                  <%= link_to '#', class: 'flex-grow text-indigo-500 border-b-2 border-indigo-500 py-2 text-lg px-1', 'turbo-frame': 'description' do %>
                    Description
                  <% end %>
                  <%= link_to '#', class: 'flex-grow border-b-2 border-gray-300 py-2 text-lg px-1', 'turbo-frame': 'details' do %>
                    Détails
                  <% end %>
                </div>
                <p class="leading-relaxed mb-4 toggle-description-content"><%= plants.first.description %></p>
                <div class="flex border-t border-gray-200 py-2 toggle-details-content">
                  <span class="text-gray-500">Ville</span>
                  <span class="ml-auto text-gray-900">Paris</span>
                </div>
                <div class="flex border-t border-gray-200 py-2 toggle-details-content">
                  <span class="text-gray-500">Date de début</span>
                  <span class="ml-auto text-gray-900"><%= dates.first.strftime("%d/%m/%Y") %></span>
                </div>
                <div class="flex border-t border-b mb-6 border-gray-200 py-2 toggle-details-content">
                  <span class="text-gray-500">Date de fin</span>
                  <span class="ml-auto text-gray-900"><%= dates.last.strftime("%d/%m/%Y") %></span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="title-font font-medium text-2xl text-gray-900"></span>
                  <div class="flex items-center">
                    <%= button_to "Garder ses plantes", plant_sittings_path, method: :post, params: { kept_plant_ids: plants.map(&:id) }, class: "flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded", form: { id: "create-plant-sitting-form" } %>
                    <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
                      <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
                        <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p>Aucune plante à garder pour le moment.</p>
      <% end %>
    </div>
  </div>
</section>
