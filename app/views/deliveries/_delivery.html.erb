<div id="<%= dom_id delivery %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Delivery type:</strong>
    <%= delivery.delivery_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Delivery price:</strong>
    <%= delivery.delivery_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Delivery provider:</strong>
    <%= delivery.delivery_provider %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this delivery", delivery, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this delivery', edit_delivery_path(delivery), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
