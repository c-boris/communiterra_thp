<div class="dashboard-container">
  <h1>Welcome to your Dashboard!</h1>

<div class="flex">
  <div class="w-1/2 mr-4">
    <div class="bg-white rounded-lg shadow-md p-4 mb-4 h-full">
      <h2 class="text-2xl font-bold mb-4">Vos plantes que vous possédez :</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @owned_plants.each do |owned_plant| %>
          <div class="bg-white rounded-lg shadow-md p-4 h-full">
            <h2 class="text-xl font-bold mb-2"><%= owned_plant.plant.common_name %></h2>
            <div class="mt-4">
              <%= link_to "Voir les détails", owned_plant.plant, class: "text-indigo-500 font-semibold" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="w-1/2 ml-4">
    <div class="bg-white rounded-lg shadow-md p-4 mb-4 h-full">
      <h2 class="text-2xl font-bold mb-4">Votre profil :</h2>
      <p><strong>Username:</strong> <%= current_user.username %></p>
      <p><strong>Bio:</strong> <%= current_user.bio %></p>
      <div class="mt-4">
        <%= link_to "Modifier mon profil", edit_user_registration_path, class: "text-indigo-500 font-semibold" %>
        <%= link_to "Voir mon profil complet", user_path(current_user), class: "text-indigo-500 font-semibold" %>
      </div>
    </div>
  </div>
</div>








</div>
