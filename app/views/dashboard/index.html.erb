
<div class="dashboard-container min-h-screen">
  
  <h1>Welcome to your Dashboard!</h1>

  <%= render "shared/logbook"  %>

  <%= render "owned_plants/owned_plant" %>


  <div class="w-1/2 ml-4">
    <div class="bg-white rounded-lg shadow-md p-4 mb-4 h-full">
      <h2 class="text-2xl font-bold mb-4">Votre profil :</h2>
      <p><strong>Prénom:</strong> <%= current_user.first_name %></p>
      <p><strong>Nom:</strong> <%= current_user.last_name %></p>
      <p><strong>Email:</strong> <%= current_user.email %></p>
      <p><strong>Username:</strong> <%= current_user.username %></p>
      <p><strong>Téléphone:</strong> <%= current_user.phone_number %></p>
      <p><strong>Anniversaire:</strong> <%= current_user.birthdate %></p>
      <p><strong>Bio:</strong> <%= current_user.bio %></p>
      <div class="mt-4">
        <%= link_to "Modifier mon profil", edit_user_registration_path, class: "text-indigo-500 font-semibold" %>
      </div>
    </div>
</div>
