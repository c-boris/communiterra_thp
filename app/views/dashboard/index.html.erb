<div class="dashboard-container">
  <div class="flex">
    <div class="w-1/2 mr-4 p-4">
      <div class="bg-white rounded-lg shadow-md p-4 mb-4 h-full">
        <h2 class="text-2xl font-bold mb-4">Vos plantes :</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% @owned_plants.each do |owned_plant| %>
            <div class="bg-white rounded-lg shadow-md p-4 h-full bg-green-50">
              <h2 class="text-xl font-bold mb-2"><%= owned_plant.plant.common_name %></h2>
              <div class="mt-4">
                <%= link_to "Voir les dÃ©tails", owned_plant.plant, class: "p-4 text-indigo-500 font-semibold" %>
                <%= link_to "Voir ma plante", owned_plant_path(current_user.owned_plants.find_by(plant_id: owned_plant.plant.id)), class: "p-4 text-indigo-500 font-semibold" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="w-1/2 ml-4 p-4">
      <div class="bg-white rounded-lg shadow-md p-4 mb-4 h-full">
        <h2 class="text-2xl font-bold mb-4">Votre profil :</h2>
        <p><strong>Username:</strong> <%= current_user.username %></p>
        <p><strong>Bio:</strong> <%= current_user.bio %></p>
        <div class="mt-4">
          <%= link_to "Modifier mon profil", edit_user_registration_path, class: "p-3 text-indigo-500 font-semibold" %>
          <%= link_to "Voir mon profil complet", user_path(current_user), class: "p-3 text-indigo-500 font-semibold" %>
        </div>
      </div>
    </div>
  </div>
</div>
