<div id="<%= dom_id log_book %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Owned plant:</strong>
    <%= log_book.owned_plant_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Entry date:</strong>
    <%= log_book.entry_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= log_book.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= log_book.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Mood:</strong>
    <%= log_book.mood_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this log book", log_book, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this log book', edit_log_book_path(log_book), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
