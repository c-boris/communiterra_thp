<div id="<%= dom_id order_listing %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Listing:</strong>
    <%= order_listing.listing_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= order_listing.order_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= order_listing.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this order listing", order_listing, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this order listing', edit_order_listing_path(order_listing), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
